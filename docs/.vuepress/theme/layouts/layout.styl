.ag-container
  min-height: 100vh
  // display: grid
  // grid-template-rows: auto 1fr auto
  // place-items: center
  // transition: all 0.3s 0.1s ease
.ag-header
  transition: padding-top 0.3s 0.1s ease
.ag-body
  min-height: calc(100vh - 200px)
  width: 100%
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
.is-page
  padding-top: 64px
  .ag-body
    min-height: 100vh
    width: 100%
    justify-content: flex-start
  .ag-header
    position: fixed
    padding-top: 24px
    top: 0
    background-color: var(--bg-color-op6)
    // border-bottom: 0.5px solid rgba(0, 0, 0, 8%)
  >>> .ag-nav
    justify-self: end
  .ag-slogn
    position: fixed
    left: 24px
    top: 12px
    margin-bottom: 0
    >>> h1
      font-size: 18px
      text-align: left
      margin-bottom: 0
      margin-top: 4px
      letter-spacing: 3px
      transition: font-size 0.3s 0.45s ease
    >>> h4
      margin-bottom: 0
      margin-left: -2px
      margin-top: 2px
      font-size: 12px
      letter-spacing: 0px
      transition: font-size 0.3s 0.45s ease