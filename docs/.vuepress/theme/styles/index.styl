@require './animate'
@require './config'
@require './code'
@require './code-theme'
@require './markdown'
*, *:before, *:after
    box-sizing: border-box
body
    margin: 0
    background-color: var(--bg-color)
    font-size: 14px
    color: var(--main-color)
    transition: color 0.3s ease
    overflow-x: hidden
    font-family: -apple-system, system-ui, DinPro, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, sans-serif, BlinkMacSystemFont, Helvetica Neue, PingFang SC, Hiragino Sans GB, Microsoft YaHei, Arial
ul, li
    margin: 0
    padding: 0
    list-style: none
a
    text-decoration: none
    text-decoration-color: inherit
    color: inherit
::-webkit-scrollbar
    width: 8px
    height: 4px
::-webkit-scrollbar-thumb
    background: var(--main-color-2)
    border-radius: 30px
    // box-shadow: inset 2px 2px 2px hsla(0, 0%, 100%, 0.25), inset -2px -2px 2px rgba(0, 0, 0, 0.25)
::-webkit-scrollbar-track
    background: var(--bg-color)
div::-webkit-scrollbar
    width: 4px
.content__default
    color: var(--text-color)